<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/manage_result_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="标题" />

        <EditText
            android:id="@+id/manage_result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manage_result_title_view"
            android:layout_marginTop="5dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/manage_result_conent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manage_result_title"
            android:layout_marginTop="5dp"
            android:text="内容" />

        <EditText
            android:id="@+id/manage_result_conent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manage_result_conent_view"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:scrollbars="vertical"
            android:singleLine="false" />

        <scau.info.volunteertime.activity.manageresult.MyGridView
            android:id="@+id/manage_result_images_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/manage_result_conent"
            android:cacheColorHint="@android:color/transparent"
            android:columnWidth="90dip"
            android:gravity="center"
            android:horizontalSpacing="5dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="auto_fit"
            android:padding="5dip"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dip" >
        </scau.info.volunteertime.activity.manageresult.MyGridView>
    </RelativeLayout>

</ScrollView>