<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:slide="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:id="@+id/item">

		<TextView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:id="@+id/voteTitle"
				android:textColor="@color/black"
				  android:textSize="17dp"/>
		
		 <ImageView             
		    android:id="@+id/iconvoteren"
            android:layout_width="17dp"
            android:layout_height="17dp" 
            android:layout_alignParentBottom="true"
            android:paddingBottom="1dp"
            android:paddingRight="2dp"
            
             android:layout_alignParentLeft="true"
            android:src="@drawable/iconren"
            />
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/voteSum" 
				android:layout_toRightOf="@+id/iconvoteren"
				android:layout_alignParentBottom="true"
				android:text="Hello World" android:textSize="12dp"/>
		  <!-- android:text="投票" -->
		<Button
		    	
				android:id="@+id/expandable_toggle_button"
				
				android:background="@drawable/buttonvote"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/text"
				android:layout_alignParentRight="true"
				android:layout_alignTop="@id/text" android:textSize="17dp"/>
		<ImageView 
		    	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@+id/expandable_toggle_button"
				android:src="@drawable/buttonvoteback"
				android:layout_alignParentRight="true"/>

	</RelativeLayout>

	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" 
			android:id="@+id/expandable"
			 >
		 

 
	</LinearLayout>
</LinearLayout>