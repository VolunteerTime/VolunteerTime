
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        xmlns:listViewAttr="http://schemas.android.com/apk/res/scau.info.volunteertime"
     android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    	    <LinearLayout 
    android:id="@+id/menu"
    android:layout_alignParentTop="true"
    android:background="@color/blue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button android:layout_width="wrap_content"  android:layout_height="wrap_content" android:text="活动中心"/>
     <Button android:layout_width="wrap_content"  android:layout_height="wrap_content" android:text="投票中心"/>
      <Button android:layout_width="wrap_content"  android:layout_height="wrap_content" android:text="投票中心"/>
       <Button android:layout_width="wrap_content"  android:layout_height="wrap_content" android:text="投票中心"/>
        <Button android:layout_width="wrap_content"  android:layout_height="wrap_content" android:text="投票中心"/>
    </LinearLayout>
    
<LinearLayout 
	android:layout_below="@id/menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   
  >
 
 
	<cn.trinea.android.common.view.DropDownListView
	 android:id="@+id/listView"
    android:layout_height="match_parent"
    android:layout_width="match_parent" 
    android:clickable="false"
    android:descendantFocusability="beforeDescendants"
    android:layout_weight="18" 
        
        listViewAttr:isDropDownStyle="true"
        listViewAttr:isOnBottomStyle="true"
        listViewAttr:isAutoLoadOnBottom="true" 
    /> 
        
         
 

          
</LinearLayout>

	
	<RelativeLayout android:visibility="invisible" android:id="@+id/whole_comment" android:layout_height="wrap_content" android:layout_width="wrap_content">
	<EditText
	    android:id="@+id/edit"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="0dp" 
	    android:text="dfffffffffffffffffffffffff" />
		
	  <Button android:layout_toRightOf="@id/edit" android:layout_width="wrap_content" android:layout_height="wrap_content"
	      android:text="发表"
	      android:layout_alignParentBottom="true"
	      android:layout_alignParentRight="true"
	      />
 
	</RelativeLayout>

</RelativeLayout>