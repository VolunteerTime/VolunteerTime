<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:orientation="vertical"
      xmlns:listViewAttr="http://schemas.android.com/apk/res/scau.info.volunteertime"
    android:layout_height="match_parent"  >
    
    
     
    
	<com.tjerkw.slideexpandable.library.PullToRefreshDropDownExpandableListView
	 android:id="@+id/listView"
    android:layout_height="match_parent"
    android:layout_width="match_parent" 
    android:clickable="false"
    android:descendantFocusability="beforeDescendants"
    android:layout_weight="18" 
        
        listViewAttr:isDropDownStyle="true"
        listViewAttr:isOnBottomStyle="true"
        listViewAttr:isAutoLoadOnBottom="true" 
    /> 
         
</LinearLayout>

