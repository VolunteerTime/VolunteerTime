<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#FFFFFF"></solid>

            <stroke android:width="2dp" android:color="@color/green_yellow" />

            <padding android:bottom="4dp" android:left="10dp" android:right="10dp" android:top="4dp"></padding>

            <corners android:radius="4dp"></corners>
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <solid android:color="#FFFFFF"></solid>

            <stroke android:width="2dp" android:color="@color/cute_yellow" />

            <padding android:bottom="4dp" android:left="10dp" android:right="10dp" android:top="4dp"></padding>

            <corners android:radius="4dp"></corners>
        </shape></item>
    <item><shape android:shape="rectangle">
            <solid android:color="#FFFFFF"></solid>

            <stroke android:width="1dp" android:color="#ffffff" />

            <padding android:bottom="4dp" android:left="10dp" android:right="10dp" android:top="4dp"></padding>

            <corners android:radius="4dp"></corners>
        </shape></item>

</selector>